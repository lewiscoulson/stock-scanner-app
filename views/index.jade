doctype html
html
  head
    title Stock Price App

    link(rel='stylesheet', href='dist/css/main.min.css', type='text/css')

    script(src='dist/js/dependencies.min.js')
    script(src='dist/js/app.min.js')

  body
    div(class="wrapper")

        h1 Stock Price App

        div.views
            a(href="" class="btn btn-default") view all
            a(href="#new" class="btn btn-default") add new
            
        div

            ul.stocks

            div.new-stock
                form(action='stocks',method='post')
                    label(for='companyName') Company Name
                    input(name='companyName' id='companyName')
                    label(for='symbol') Symbol
                    input(name='symbol' id='symbol')
                    label(for='targetPrice') Target Price
                    input(name='targetPrice' id='targetPrice')
                    button(type='submit') Submit

            script#stockTemplate(type='text/template')
              div
